{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "dist/functions",
    "predeploy": [
      "yarn lint-functions",
      "yarn lint-app",
      "yarn typecheck-app",
      "yarn clean",
      "yarn build-functions",
      "yarn build-app",
      "yarn copy-deps",
      "yarn install-deps"
    ]
  },
  "hosting": {
    "public": "dist/public",
    "rewrites": [
      {
        "source": "**/**",
        "function": "nextApp"
      }
    ],
    "predeploy": "yarn build-public"
  }
}
