  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Next: Chrome",
      "url": "https://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Next: Node",
      "runtimeArgs": ["--inspect", "server.js"],
      "port": 9229,
      "console": "integratedTerminal",
      "env": {
        "NODE_EXTRA_CA_CERTS": "./keys/rootCA.pem"
      }
    }
  ],
  "compounds": [
    {
      "name": "Next: Full",
      "configurations": ["Next: Node", "Next: Chrome"]
    }
  ]
}
